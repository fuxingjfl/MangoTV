<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xha.mangotv.MainActivity">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_hui"></View>
        <RadioGroup
            android:id="@+id/rgp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="3dp">
            <!--注意是drawableTop-->
            <RadioButton
                android:id="@+id/rb_home"
                style="@style/bottom_tab_style"
                android:checked="true"
                android:drawableTop="@drawable/tab_ssss_selector"
                android:drawablePadding="-3dp"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:gravity="center"
                android:text="实时收视"
                />

            <RadioButton
                android:id="@+id/rb_find"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_lsss_selector"
                android:drawablePadding="-3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="历史收视"
                />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
