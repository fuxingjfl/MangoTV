<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_sg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size24px"/>

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/xia"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textColor="@color/persimmon"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size24px"/>

            <ImageView
                android:id="@+id/iv_dq"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/xia_xz"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pdlx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pdlx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="频道"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/text_size24px"/>

            <ImageView
                android:id="@+id/iv_pdlx"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/xia"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_san"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dq"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


    <include layout="@layout/qr_qx_layout"></include>

</LinearLayout>
