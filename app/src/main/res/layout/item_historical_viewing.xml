<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <RelativeLayout
       android:layout_width="250dp"
       android:layout_height="150dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:background="@drawable/shape_rl">

       <com.xha.mangotv.view.XCRoundRectImageView
           android:id="@+id/roundRectImageView_data"
           android:layout_centerInParent="true"
           android:scaleType="centerCrop"
           android:layout_width="250dp"
           android:layout_height="150dp"
           ></com.xha.mangotv.view.XCRoundRectImageView>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/shape_jianbian"
           android:layout_alignParentBottom="true"

           >
           <TextView
               android:id="@+id/tv_ls_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:textColor="@color/white"
               android:layout_marginLeft="10dp"
               android:layout_marginBottom="5dp"
               android:layout_centerVertical="true"
               android:textSize="@dimen/text_size26px"/>
       </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
