<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/blue_press_selector">

    <LinearLayout
        android:id="@+id/ll_mg_tab"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/hs"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_head_view"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_name"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="频道名称"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_move_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_price_last"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="实时收视率"/>

            <TextView
                android:id="@+id/id_tv_rise_rate24"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="实时收视份额"/>

            <TextView
                android:id="@+id/id_tv_vol24"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"

                tools:text="到达率"/>

            <TextView
                android:id="@+id/id_tv_close"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"

                tools:text="收盘价"/>

            <TextView
                android:id="@+id/id_tv_open"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"

                tools:text="开盘价"/>

            <TextView
                android:id="@+id/id_tv_bid"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"

                tools:text="买一价"/>

            <TextView
                android:id="@+id/id_tv_ask"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"

                tools:text="卖一价"/>

            <TextView
                android:id="@+id/id_tv_percent"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"

                tools:text="量比"/>

        </LinearLayout>

    </LinearLayout>

    <!--<View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHint"/>-->
</RelativeLayout>